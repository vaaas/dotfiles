super + z ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + z ; j
	scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard ; rm -- "/tmp/ocr"*

super + z ; s
	scrot -s

super + z ; l
	slock

super + c
	notify-send "$(date '+%H:%M')"

super + e
	dmenu_run -i

super + shift + e
	clip_run

super + o
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + F2
	nautilus

super + F3
	gedit

super + F4
	cd ~/Music/radio && file="$(ls -1 | dmenu -i -p 'select a radio')" && gnome-mpv -- "$file"

super + grave
	SHELL=bash dbus-launch gnome-terminal

super + p
	passmenu

super + End
	slock & systemctl sleep

super + shift + End
	zenity --question --text="Shut down?" && systemctl poweroff
	
