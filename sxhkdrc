super + z ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + z ; j
	sleep 0.2s && scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard && rm -- "/tmp/ocr"*

super + z ; s
	scrot -s

super + z ; l
	ibus engine xkb:us::eng && slock

super + z ; r
	redshift -x

super + z ; shift + R
	redshift -O 2500K

super + z ; F1
	killall -s SIGUSR1 sxhkd

super + c
	notify-send "$(date '+%H:%M')"

super + e
	dmenu_run -i

super + shift + e
	clip_run

super + o
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + shift + F1
	firefox --private-window

super + F2
	nautilus

super + F3
	emacsclient -nc

super + F4
	cd ~/Music/radio && file="$(ls -1 | sort | pytkfilter)" && gnome-mpv -- "$file"

super + F5
	gnome-system-monitor

super + grave
	alacritty

super + p
	passmenu

super + End
	slock & systemctl sleep

super + shift + End
	zenity --question --text="Shut down?" && systemctl poweroff

XF86AudioLowerVolume
	pactl set-sink-volume 0 -10%

XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10%

XF86AudioMute
	pactl set-sink-mute 0 toggle
