super + c ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + c ; m
	xclip -o selection primary | cmark --smart | xclip -selection clipboard

super + c ; j
	sleep 0.2s && scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard && rm -- "/tmp/ocr"*

super + c ; s
	scrot -s

super + c ; l
	xset dpms force suspend && slock

super + c ; r
	redshift -x

super + c ; shift + R
	redshift -O 2500K

super + Escape
	pkill -USR1 -x sxhkd

super + c ; d
	notify-send "$(date '+%H:%M')"

super + c ; v
	xclip -selection clipboard -o | pr -Td | xclip -selection clipboard

super + d
	dmenu_run -i

super + shift + d
	clip-run

super + m
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + shift + F1
	firefox --private-window

super + F2
	nautilus

super + F3
	emacsclient -nc

super + F4
	cd ~/Music/radio && file="$(ls -1 | sort | dmenu)" && mpv --force-window=immediate -- "$file"

super + F5
	gnome-system-monitor

super + F6
	alacritty -e pulsemixer

super + F7
	feedreader

super + x
	alacritty

super + shift + grave
	emacsclient -nc -e "(eshell)"

super + p
	passmenu

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

super + e
	echo -n 'n' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + o
	echo -n 'p' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + i
	echo -n 'P' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + a
	echo -n 'N' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + q
	echo -n 'q' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + w
	echo -n '1' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + u
	echo -n '2' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + v
	echo -n '3' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + semicolon
	echo -n '4' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + grave
	echo -n '5' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + ctrl + e
	echo -n 'l' | socat - UNIX-CONNECT:/tmp/vaswm.socket

super + ctrl + o
	echo -n 'L' | socat - UNIX-CONNECT:/tmp/vaswm.socket
