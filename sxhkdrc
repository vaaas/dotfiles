super + z ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + z ; j
	scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard ; rm -- "/tmp/ocr"*

super + z ; s
	scrot -s

super + z ; l
	ibus engine xkb:us::eng && slock

super + c
	notify-send "$(date '+%H:%M')"

super + e
	dmenu_run -i

super + shift + e
	clip_run

super + o
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + shift + F1
	firefox --private-window

super + F2
	thunar

super + F3
	code

super + F4
	cd ~/Music/radio && file="$(ls -1 | sort | pytkfilter)" && gnome-mpv -- "$file"

super + F5
	gnome-system-monitor

super + grave
	alacritty

super + p
	passmenu

super + End
	slock & systemctl sleep

super + shift + End
	zenity --question --text="Shut down?" && systemctl poweroff
