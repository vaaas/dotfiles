#!/bin/sh

export GTK_USE_PORTAL=1
export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
xrdb -merge ~/.Xresources
ibus-daemon -xdr
dunst -font 'Sans 16' &
#setxkbmap slatin
dbus-launch sxhkd -m -1 &
emacs --daemon
picom &

if test `hostname` = cleome
then
	redshift-service &
	xwallpaper --tile wallpaper &
	unclutter --timeout 1 &
else
	xrandr --output HDMI-1 --primary --mode 1920x1080 --pos 1080x533 --rotate normal --output HDMI-2 --off --output DP-1 --mode 1920x1080 --pos 0x0 --rotate left --output HDMI-3 --off
	xinput set-button-map 13 3 2 1
	xinput set-prop 13 314 1
	xinput set-prop 13 327 1
fi

dbus-launch berry
