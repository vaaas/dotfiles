export HISTCONTROL=ignoreboth:erasedups
export PAGER=less
export PATH=~/Binaries:$PATH
umask 0026

if test `hostname` = cleome
then
	export BROWSER=firefox
	export EDITOR=gedit
	export GDK_CORE_DEVICE_EVENTS=1
	if ps -A | grep Xorg
	then source ~/.bashrc
	else startx
	fi
else
	ps -A | grep rclone || rclone serve webdav --addr '0.0.0.0:8080' ~ > /dev/null 2> /dev/null &
	if test $TERM = screen
	then source ~/.bashrc
	else tmux attach || tmux
	fi
fi
