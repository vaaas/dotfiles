#!/bin/dash

xrdb -merge ~/.Xresources

# keyboard configuration
export GTK_IM_MODULE=xim
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=xim
setxkbmap vlatin
ibus-daemon -xd

emacs --daemon
redshift_service &
dunst -font "Sans 16" &
feh --bg-tile wallpaper &
unclutter --timeout 1 &
bar &
dbus-launch sxhkd &
picom &
slock
dbus-launch dwm-loop
