#!/bin/dash

xrdb -merge ~/.Xresources

# keyboard configuration
export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus
ibus-daemon -xd
xset r rate 180
setxkbmap vlatin

emacs --daemon
redshift_service &
dunst -font "Sans 16" &
xwallpaper --tile wallpaper &
unclutter --timeout 1 &
bar &
dbus-launch sxhkd &
picom &
dbus-launch dwm-loop
