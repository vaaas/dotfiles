super + c ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + c ; m
	xclip -o selection primary | cmark --smart | xclip -selection clipboard

super + c ; j
	sleep 0.2s && scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard && rm -- "/tmp/ocr"*

super + c ; s
	scrot -s

super + c ; l
	slock

super + c ; r
	redshift -x

super + c ; shift + R
	redshift -O 2500K

super + Escape
	pkill -USR1 -x sxhkd

super + c ; d
	notify-send "$(date '+%H:%M')"

super + c ; v
	xclip -selection clipboard -o | pr -Td | xclip -selection clipboard

super + d
	dmenu_run -i

super + shift + d
	clip-run

super + m
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + shift + F1
	firefox --private-window

super + F2
	nautilus

super + F3
	emacsclient -nc

super + F4
	cd ~/Music/radio && file="$(ls -1 | sort | dmenu)" && mpv --force-window=immediate -- "$file"

super + F5
	gnome-system-monitor

super + F6
	pavucontrol

super + F7
	feedreader

super + x
	xterm

super + p
	passmenu

super + r
	remotes

super + shift + q
	killall dwm

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

super + w
	echo -n 'a' >> /tmp/dwm.fifo

super + u
	echo -n 'b' >> /tmp/dwm.fifo

super + v
	echo -n 'c' >> /tmp/dwm.fifo

super + semicolon
	echo -n 'd' >> /tmp/dwm.fifo

super + shift + w
	echo -n 'A' >> /tmp/dwm.fifo

super + shift + u
	echo -n 'B' >> /tmp/dwm.fifo

super + shift + v
	echo -n 'C' >> /tmp/dwm.fifo

super + shift + semicolon
	echo -n 'D' >> /tmp/dwm.fifo

super + i
	echo -n 'V' >> /tmp/dwm.fifo

super + a
	echo -n 'v' >> /tmp/dwm.fifo

super + shift + i
	echo -n 'S' >> /tmp/dwm.fifo

super + shift + A
	echo -n 's' >> /tmp/dwm.fifo

super + e
	echo -n 'w' >> /tmp/dwm.fifo

super + o
	echo -n 'W' >> /tmp/dwm.fifo

super + shift + e
	echo -n 'l' >> /tmp/dwm.fifo

super + shift + o
	echo -n 'L' >> /tmp/dwm.fifo

super + y
	echo -n 'r' >> /tmp/dwm.fifo

super + shift + y
	echo -n 'R' >> /tmp/dwm.fifo

super + apostrophe
	echo -n 'z' >> /tmp/dwm.fifo

super + f
	echo -n 'f' >> /tmp/dwm.fifo

super + q
	echo -n 'q' >> /tmp/dwm.fifo