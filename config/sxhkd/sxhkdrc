super + c ; w
	notify-send "$(xclip -o -selection primary | wc -w )"

super + c ; m
	xclip -o selection primary | cmark --smart | xclip -selection clipboard

super + c ; j
	sleep 0.2s && scrot -s "/tmp/ocr.png" && tesseract -l jpn "/tmp/ocr.png" stdout | xclip -selection clipboard && rm -- "/tmp/ocr"*

super + c ; s
	scrot -s

super + c ; l
	slock

super + c ; r
	redshift -x

super + c ; shift + R
	redshift -O 2500K

super + Escape
	pkill -USR1 -x sxhkd

super + c ; d
	notify-send "$(date '+%H:%M')"

super + c ; v
	xclip -selection clipboard -o | pr -Td | xclip -selection clipboard

super + d
	dmenu_run -i

super + shift + d
	clip-run

super + m
	thefile="$(xzcat ~/filedb.xz | dmenu)" && gio open "$thefile"

super + F1
	firefox

super + shift + F1
	firefox --private-window

super + F2
	nautilus

super + F3
	emacsclient -nc

super + F4
	cd ~/Music/radio && file="$(ls -1 | sort | dmenu)" && mpv --force-window=immediate -- "$file"

super + F5
	gnome-system-monitor

super + F6
	pavucontrol

super + F7
	feedreader

super + x
	emacsclient -ce '(ansi-term "/bin/bash")'

super + p
	passmenu

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

super + q
	berryc window_close

super + {i,a}
	berryc {snap_left,snap_right}

super + ctrl i
	berryc window_move -128 0

super + ctrl a
	berryc window_move 128 0

super + ctrl e
	berryc window_move 0 128

super + ctrl o
	berryc window_move 0 -128

super + e
	berryc cycle_focus
	berryc window_raise

super + o
	berryc window_monocle

super + apostrophe
	berryc window_resize_absolute 640 640

super + Return
	berryc window_center

super + ctrl + {w,u,v,semicolon}
	berryc send_to_workspace {0,1,2,3}

super + {w,u,v,semicolon}
	berryc switch_workspace {0,1,2,3}