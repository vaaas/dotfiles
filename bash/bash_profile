export HISTCONTROL=ignoreboth:erasedups
export BROWSER=firefox
export EDITOR=emacsc
export SUDO_EDITOR=$EDITOR
export PAGER=less
export PATH=~/Binaries:$PATH
export GDK_CORE_DEVICE_EVENTS=1

(ps -A | grep pulseaudio) || pulseaudio -D &

if test -z "$DISPLAY" && test -n "$XDG_VTNR" && test "$XDG_VTNR" -eq 1
then
	exec startx
elif (test -n "$XDG_VTNR" && test "$XDG_VTNR" -eq 2) ||
     (test -n "$SSH_CLIENT" || test -n "$SSH_TTY")
then
	exec screen -xRR VAS
else
	source ~/.bashrc
fi
