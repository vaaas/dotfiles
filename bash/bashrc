PS1='\u@\h:\[\e[1;34m\]$PWD \[\e[1;31m\]$?\[\e[0m\] > '
IFS='
'
eval $(dircolors -b)

set -o noclobber
shopt -s histappend
shopt -s histverify

#aliases
